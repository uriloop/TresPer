<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewholderBackground"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_marginHorizontal="5dp"
    android:maxWidth="340dp"
    android:minWidth="340dp">

    <ImageView
        android:id="@+id/cartellView"
        android:layout_width="160dp"
        android:maxWidth="120dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:paddingEnd="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomTorneigView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@color/text_tronja"
            android:textAlignment="center"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="250dp"
            android:orientation="vertical"


            app:layout_maxWidth="250dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Dia: "
                android:textAlignment="center"
                android:textColor="@color/text_tronja"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/dataView"
                android:text="10-04-2022"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="@color/text_clar"
                android:textSize="13sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="280dp"

            android:orientation="vertical"
            app:layout_maxWidth="320dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Lloc: "
                android:textAlignment="center"
                android:textColor="@color/text_tronja"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/llocTorneigView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Institut Puig Castellar"
                android:textAlignment="center"
                android:textColor="@color/text_clar"
                android:textSize="13sp" />
        </LinearLayout>


        <!--    <TextView
                android:id="@+id/llocTorneigView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                android:textColor="@color/text_clar"

                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:textColor="@color/text_clar"

                android:id="@+id/dataView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                android:textAlignment="center"
                android:textSize="14sp" />-->


    </LinearLayout>

</LinearLayout>


