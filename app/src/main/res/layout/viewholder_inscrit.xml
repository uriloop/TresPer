<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginHorizontal="10dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/frame_torneig"/>

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        >


        <TextView
            android:id="@+id/nom_user_textview"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_marginBottom="1dp"
            android:elevation="12dp"
            android:fontFamily="@font/osw_demi_bold"
            android:paddingHorizontal="5dp"
            android:text="slamDunk"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/nom_user_textview2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2"

            android:layout_marginBottom="1dp"
            android:elevation="12dp"
            android:fontFamily="@font/osw_demi_bold"
            android:paddingHorizontal="5dp"
            android:text="The Winners"
            android:textSize="18dp" />
        <ImageView
            android:layout_weight="0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/trofeu_color"
            />


        <TextView
            android:id="@+id/dia"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2"

            android:layout_marginBottom="1dp"
            android:elevation="12dp"
            android:fontFamily="@font/osw_demi_bold"
            android:paddingHorizontal="5dp"
            android:text="10/8/22"
            android:textSize="18dp"
            />





    </LinearLayout>

</FrameLayout>