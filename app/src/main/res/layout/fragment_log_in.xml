<?xml version="1.0" encoding="utf-8"?>


<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignContent="space_around"
    app:alignItems="center"
    android:padding="2dp"
    app:flexDirection="column"
    app:flexWrap="wrap"
    app:justifyContent="center"
    app:layout_flexGrow="@integer/material_motion_duration_long_2">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_maxHeight="300dp"
        app:layout_maxWidth="300dp">

        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="100dp"

            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/team" />

        <TextView
            android:id="@+id/benvinguda"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/chunk_five_regular"
            android:gravity="center"
            android:minWidth="300dp"

            android:padding="10dp"
            android:text="BÃ squet 3x3"
            android:textAlignment="center"
            android:textColor="@color/bottom_icono"
            android:textColorHint="@color/bottom_icono"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/slogan"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="118dp"
            android:fontFamily="@font/caveat_regular"
            android:gravity="center_horizontal"
            android:minWidth="300dp"

            android:text="En estat pur!"
            android:textAlignment="center"
            android:textColor="@color/bottom_icono"
            android:textColorHint="@color/bottom_icono"
            android:textSize="34sp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="280dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/sym_action_email" />

        <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/text_tronja"
            android:hint="Email adress:"
            android:inputType="textEmailAddress"
            android:minWidth="280dp"
            android:paddingStart="10dp"
            android:paddingLeft="5dp"
            android:textColor="@color/text_clar"

            android:textColorHint="@color/text_clar" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/passLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="280dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_lock_idle_lock" />

        <EditText

            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/text_tronja"

            android:hint="Password"
            android:inputType="textPassword"
            android:minWidth="280dp"
            android:paddingStart="10dp"
            android:paddingLeft="5dp"
            android:textColor="@color/text_clar"
            android:textColorHint="@color/text_clar" />

    </LinearLayout>

    <TextView
        android:id="@+id/forgetPasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minWidth="300dp"
        android:paddingVertical="7dp"
        android:paddingStart="35dp"
        android:paddingEnd="20dp"
        android:text="forget password"
        android:textColor="@color/teal_700"
        android:textSize="16sp" />


    <Button
        android:id="@+id/buttonLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="20dp"
        android:minWidth="280dp"
        android:minHeight="55dp"
        android:text="Log in"

        android:textSize="18sp" />


    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:maxHeight="20dp"
        android:minWidth="280dp"
        android:minHeight="55dp"
        android:text="Register"
        android:textSize="18sp"
        app:layout_wrapBefore="false"

        />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="300dp"
        android:text="- or -"
        android:textAlignment="center"
        android:textColor="@color/text_clar"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/google"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxWidth="300dp"
        android:maxHeight="55dp"
        android:src="@drawable/google_button"

        />


    <!--  Aquesta es una llibreria de progress bars-->
    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@color/background"
        android:fitsSystemWindows="true"
        android:outlineSpotShadowColor="@color/background"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mk_color="@color/text_especial"
        app:mk_type="Whirlpool" />

</com.google.android.flexbox.FlexboxLayout>