<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/info_button"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="-7dp"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_200"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Info"

            />

        <Button
            android:id="@+id/equips_button"
            android:layout_width="1dp"

            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1dp"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"

            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Equips"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/partits_button"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1dp"

            android:layout_marginTop="-7dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_200"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Partits"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/titolParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:flow_horizontalStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs">

        <TextView
            android:textColor="@color/purple_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:paddingVertical="20dp"
            android:text="Equips participants"
            android:textAlignment="center"
            android:textFontWeight="700"
            android:textSize="22dp" />


        <TextView
            android:textColor="@color/purple_200"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="140dp"
            android:text="Inscripció a la pàgina d'informació"
            android:textAlignment="center"
            app:flow_wrapMode="chain"
            android:paddingVertical="5dp"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titolParticipants"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:alignItems="stretch"
            app:justifyContent="space_around"
            >






        </com.google.android.flexbox.FlexboxLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
