<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".AvisNewTorneigFragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="122dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/titol_torneig_frame" />


            <TextView
                android:id="@+id/dataView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:elevation="10dp"
                android:fontFamily="@font/chunk_five_regular"
                android:gravity="center"
                android:text="10-04-2022"
                android:textAlignment="center"
                android:textColor="@color/text_clar"
                android:textSize="16sp" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="122dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/titol_torneig_frame" />


            <TextView
                android:id="@+id/llocView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:elevation="10dp"
                android:fontFamily="@font/chunk_five_regular"
                android:gravity="center"
                android:text="10-04-2022"
                android:textAlignment="center"
                android:textColor="@color/text_clar"
                android:textSize="16sp" />


        </FrameLayout>

        <ImageView
            android:id="@+id/fons"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/scoreboard_tauler_marc" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="145dp"

            >

            <ImageView
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"

                android:src="@drawable/titol_torneig_frame" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/osw_stencil"
                android:maxLength="12"

                android:maxLines="1"
                android:text="SNTK 3x3"
                android:textColor="@color/text_clar"
                android:textSize="32dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="50dp"
            android:layout_marginTop="6dp"
            android:rotation="30">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"

                android:src="@drawable/titol_torneig_frame" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/chunk_five_regular"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="NEW"
                android:textColor="@color/text_clar"
                android:textSize="32dp" />
        </FrameLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>