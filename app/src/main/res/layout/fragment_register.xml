<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignContent="space_around"
    app:alignItems="center"
    android:padding="3dp"
    app:flexDirection="column"
    app:flexWrap="wrap"
    app:justifyContent="center"
    app:layout_flexGrow="@integer/material_motion_duration_long_2">

    <FrameLayout
        android:id="@+id/basquetTitleFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_maxHeight="200dp"
        android:layout_marginBottom="10dp"
        app:layout_maxWidth="280dp">

        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="100dp"

            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/team" />

        <TextView
            android:id="@+id/benvinguda"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/chunk_five_regular"
            android:gravity="center"
            android:minWidth="300dp"

            android:text="Bàsquet 3x3"
            android:textAlignment="center"
            android:textColor="@color/bottom_icono"
            android:textColorHint="@color/bottom_icono"
            android:textSize="40sp" />

    </FrameLayout>
    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="280dp"
        android:padding="3dp"
        android:text="Register"

        android:fontFamily="@font/chunk_five_regular"

        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="28sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/osw_regular"
        android:gravity="start"
        android:minWidth="280dp"
        android:maxWidth="280dp"
        android:paddingHorizontal="15dp"
android:text="Benvingut a Basquet 3x3 App, la app dels amants del bàsquet. Si t'agrada aquest esport registra't i descobreix a fons aquesta app. De part de tot l'equip, "/>

    <TextView
        android:id="@+id/benvingutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="280dp"
        android:text="Benvingut!"
        android:paddingVertical="15dp"
        android:fontFamily="@font/osw_xtr_light"
        android:textAlignment="center"
        android:textColor="@color/text_clar"
        android:textSize="20sp" />

